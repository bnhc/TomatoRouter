<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.somethingprofane.tomato.NewGroupActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:id="@+id/tableLayout"
                android:layout_margin="10dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="New Group Name:"
                        android:id="@+id/activity_new_group_groupNameLabel"
                        android:textSize="9pt"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/activity_new_group_groupNameTxt" />
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Select devices below to be added to this group:"
                android:id="@+id/activity_new_group_deviceListLabel"
                android:textSize="9pt"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_below="@+id/tableLayout"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/activity_new_group_deviceList"
                android:layout_below="@+id/activity_new_group_deviceListLabel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                tools:listitem="@android:layout/simple_list_item_multiple_choice"
                android:background="#c8c8c8"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />

            <Button
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_new_group_deleteGroupButton"
                android:background="@drawable/gradient"
                android:text="Delete"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/activity_new_group_saveGroupButton"
                android:layout_below="@+id/activity_new_group_deviceList" />

            <Button
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/activity_new_group_saveGroupButton"
                android:background="@drawable/gradient"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/activity_new_group_deviceList"
                android:layout_alignEnd="@+id/activity_new_group_deviceList" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
