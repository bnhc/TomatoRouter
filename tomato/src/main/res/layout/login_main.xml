<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="root"
            android:ems="10"
            android:id="@+id/login_main_usrname_text"
            android:layout_marginBottom="78dp"
            android:layout_above="@+id/login_main_passwd_text"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_main_passwd_text"
            android:autoText="false"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/login_main_usrname_text"
            android:layout_alignStart="@+id/login_main_usrname_text"
            android:text="admin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:id="@+id/main_login_username_lable"
            android:textSize="25dp"
            android:layout_above="@+id/login_main_usrname_text"
            android:layout_alignLeft="@+id/login_main_usrname_text"
            android:layout_alignStart="@+id/login_main_usrname_text"
            android:layout_marginBottom="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/main_login_passwd_label"
            android:layout_above="@+id/login_main_passwd_text"
            android:layout_alignLeft="@+id/login_main_passwd_text"
            android:layout_alignStart="@+id/login_main_passwd_text"
            android:layout_marginBottom="30dp"
            android:singleLine="false"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/login_main_loginbtn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="37dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_main_ip_text"
            android:layout_marginBottom="34dp"
            android:layout_above="@+id/login_main_loginbtn"
            android:layout_alignLeft="@+id/login_main_passwd_text"
            android:layout_alignStart="@+id/login_main_passwd_text"
            android:layout_alignRight="@+id/login_main_passwd_text"
            android:layout_alignEnd="@+id/login_main_passwd_text"
            android:text="192.168.1.1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP Address:"
            android:id="@+id/textView"
            android:layout_above="@+id/login_main_ip_text"
            android:layout_alignLeft="@+id/login_main_ip_text"
            android:layout_alignStart="@+id/login_main_ip_text"
            android:layout_marginBottom="33dp"
            android:textSize="25dp" />

    </RelativeLayout>
</LinearLayout>